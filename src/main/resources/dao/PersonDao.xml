<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.PersonDao">
    <insert id="createPerson" parameterType="bo.ucb.edu.ingsoft.modelo.Person">
        INSERT INTO person VALUES (
            null, #{firstName}, #{firstSurname}, #{secondSurname}, #{ci},
            1, #{phone}, #{transaction.txId}, #{transaction.txHost}, #{transaction.txUserId},
            #{transaction.txDate}
        )
    </insert>
</mapper>