<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bo.ucb.edu.ingsoft.dao.AddressDao">
    <select id="findByUserId" resultType="bo.ucb.edu.ingsoft.modelo.Address">
        SELECT
               number as number,
               street as street,
               zone as zone,
               city as city,
               country as country
        FROM address
        WHERE
            user_id = #{userId}
    </select>
    <insert id="createAddress" parameterType="bo.ucb.edu.ingsoft.modelo.Address">
        INSERT INTO address VALUES (
            null, #{driverId}, #{userId}, #{companyId}, #{startTravelId},#{deliveryTravelId},
            #{number},#{street},#{zone},#{city},#{country},1,
            #{transaction.txId}, #{transaction.txHost}, #{transaction.txUserId}, #{transaction.txDate}
        )
    </insert>
</mapper>
